{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Debug Pico",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "openocd",
            "gdbPath": "gdb-multiarch",
            "executable": "./bin/main",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "showDevDebugOutput": "raw",
            "svdFile": "./RP2040.svd",
            "runToEntryPoint": null,
            "postRestartCommands": [
                "continue"
            ],
            "postAttachCommands": [
                "continue" // should force immediate resume, doesnt seem to work
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4 // Adjust as needed for refresh rate
            },
            "openOCDPreConfigLaunchCommands": [
                "adapter speed 1000"
            ],
        }
    ]
}